<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="1.7" group="system" method="upgrade">
    <name>System - YZCommunicatie</name>
    <creationDate>February 2026</creationDate>
    <author>Jeroen Moolenschot | YZCommunicatie</author>
    <authorEmail>jeroen@yzcommunicatie.nl</authorEmail>
    <authorUrl>https://www.yzcommunicatie.nl</authorUrl>
    <copyright>Copyright (C) 2026 YZCommunicatie. All rights reserved.</copyright>
    <license>GNU General Public License version 3 or later;</license>
    <version>1.4.2</version>
    <scriptfile>script.php</scriptfile>
    <files>
        <filename plugin="yzcommunicatie">yzcommunicatie.php</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                        name="themecolor"
                        type="color"
                        default="#ffffff"
                        label="Theme Color"
                        description="Select your Theme-Color for metadata"
                />
                <field
                        name="homepagetitle"
                        type="text"
                        default=""
                        label="Home Pagetitle"
                        description="Set the Pagetitle for the Homepage, when empty only the sitename is used."
                />
            </fieldset>
        </fields>
    </config>
    <updateservers>
        <server type="extension" priority="1" name="YZCommunicatie login and admin styling">
            https://raw.githubusercontent.com/YZCommunicatie/YZC-Styling/master/manifest.xml
        </server>
    </updateservers>
</extension>
